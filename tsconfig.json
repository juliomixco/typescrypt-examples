{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["es2017", "dom", "es2016"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "rootDir": "src",
    "outDir": "build"
  },
  "exclude": ["node_modules", "build"]
}
